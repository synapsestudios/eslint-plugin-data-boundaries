generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Shared models that can be accessed from any domain
model AuditLog {
  id        String   @id @default(cuid())
  action    String
  entityId  String
  entityType String
  userId    String?
  createdAt DateTime @default(now())

  @@map("audit_logs")
}

model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String

  @@map("settings")
}